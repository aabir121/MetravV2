<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aabir.metravv2.NavDrawerPlaceSearchActivity"
    tools:showIn="@layout/app_bar_nav_drawer_main_menu">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <AutoCompleteTextView
            android:id="@+id/autocomplete_places_source"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/blackbox"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:hint="Enter Source"
            android:padding="10dp"
            android:textColorHint="@android:color/white"
            />

        <AutoCompleteTextView
            android:id="@+id/autocomplete_places_dest"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blackbox"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:padding="10dp"
            android:hint="Enter Destination"
            android:textColorHint="@android:color/white"
             />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_location_search_button"
            android:src="@drawable/icon_get_my_location"
            app:fabSize="normal"
            app:backgroundTint="@color/common_google_signin_btn_text_dark"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/getDirectionButton1"
            android:background="@drawable/homepagebuttongo"
            />


    </LinearLayout>

</fragment>



